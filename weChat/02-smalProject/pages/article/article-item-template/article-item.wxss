.article-item{
  border-bottom: 1px solid #ddd;
  padding-bottom: 20px;
}
.article-head{
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 10px;
}
.article-avatar{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  border-radius: 50%;
}
.article-date{
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #333;
  vertical-align: middle
}
.article-title{
  height: 60rpx;
  line-height:60rpx;
  font-weight: bold;
  font-size: 35rpx;
  color: #333;
  margin-left: 10px;
}
.article-image{
  width: 100%;
}
.article-content{
  line-height: 40rpx;
  font-size: 30rpx;
  letter-spacing: 2px;
  margin-left: 10px;
}
.article-footer{
    margin-left: 10px;
}
.article-footer image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle
}
.article-footer-text{
  vertical-align: middle;
  font-size: 24rpx;
  color: #aaa;
}