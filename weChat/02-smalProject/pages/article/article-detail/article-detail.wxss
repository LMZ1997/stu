.article-detail{
  
}
.article-detail-img{
  position: relative;
  width: 100%;
  height: 480rpx;
}
.article-detail-img-main{
  width: 100%;
  height: 480rpx;
}
.article-detail-img-music{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  left: 50%;
  top: 50%;
  margin-left: -30rpx;
  margin-top: -30rpx;
}
.article-detail-head{
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 10px;
}
.article-detail-head-avatar{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.article-detail-head-name{
  vertical-align: middle;
  font-size: 32rpx;
  color: #333;
  margin-left: 10px;
}
.article-detail-head-text{
  margin-left: 10px;
  font-size: 26rpx;
}
.article-detail-head-time{
  margin-left: 10px;
  font-size: 26rpx;
}
.article-detail-opreation{
  position: relative;
  width: 100%;
  height: 200rpx;
}
.article-detail-opreation-collection,
.article-detail-opreation-share{
  width: 50rpx;
  height: 50rpx;
  z-index: 999;
}
.article-detail-opreation-collection{
  position: absolute;
  right: 150rpx;
}
.article-detail-opreation-share{
  position: absolute;
  right: 80rpx;
}
.article-detail-opreation-line{
  width: 650rpx;
  height: 1px;
  background-color: #ddd;
  position: absolute;
  top: 25rpx;
  left: 20rpx;
}
.article-detail-content{
   line-height: 40rpx;
   font-size: 30rpx;
   letter-spacing: 2px;
   margin-left: 10px;
}
